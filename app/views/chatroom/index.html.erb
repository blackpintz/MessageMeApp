<h2 class="ui center aligned large icon header">
  <i class="circular brown coffee icon"></i>
  Chatroom
</h2>

<div class="ui grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
         <div class="content">
          <div class="ui feed">
            <div class="event">
              <div class="content">
               <div class="summary">
                 <em>Elliot Fu</em>: Test message.
              </div>
            </div>
          </div>
          <div class="event">
            <div class="content">
              <div class="summary">
                 <a>Stevie Feliciano</a> added <a>Elliot Fu</a> as a friend
              </div>
            </div>
          </div>
          <div class="event">
            <div class="content">
              <div class="summary">
                 <a>Helen Troy</a> added <a>Christian Rocha</a> as a friend
              </div>
            </div>
          </div>
          <div class="event">
            <div class="content">
              <div class="summary">
                 <a>Christian Rocha</a> signed up for the  site.
              </div>
            </div>
          </div>
        </div>
         </div>
         <div class="extra content">
            <form class="ui reply form">
              <div class="field">
                <div class="ui icon input">
                    <input type="text" placeholder="Add comment">
                    <i class="bordered inverted brown icon edit"></i>
                </div>
              </div>
             </form>
          </div>
     </div>
    </div>
    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="ui inverted vertical menu" id="user">
              <a class="active item">
                Home
              </a>
              <a class="item">
                Messages
              </a>
              <a class="item">
                Friends
              </a>
            </div>
        </div>
    </div>
</div>
<div class="top-space">
 <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "ui brown basic button" %> 
</div>





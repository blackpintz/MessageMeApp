<h2 class="ui center aligned large icon header">
  <i class="circular brown coffee icon"></i>
  Chatroom
</h2>

<div class="ui grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
         <div class="content">
          <div class="ui feed">
            <% @messages.each do |msg|%>
            <div class="event">
              <div class="content">
               <div class="summary">
                 <em><%= msg.user.first_name %></em>: <%= msg.comment %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
         </div>
         <div class="extra content">
           <%= form_with scope: :message, url: messages_path, local: true do |f| %>
            <form class="ui reply form">
              <div class="field">
                <div class="ui fluid action input">
                  <%= f.text_field :comment, autofocus: true, placeholder: "Add comment" %>
                  <%= button_tag( type: "submit", class: "ui icon button") do%>
                    <i class="inverted large brown icon edit"></i>
                  <% end %>
                </div>
              </div>
             </form>
             <% end %>
          </div>
     </div>
    </div>
    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="ui inverted vertical menu" id="user">
              <a class="active item">
                Home
              </a>
              <a class="item">
                Messages
              </a>
              <a class="item">
                Friends
              </a>
            </div>
        </div>
    </div>
</div>
<div class="top-space">
 <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "ui brown basic button" %> 
</div>




